{
  "name": "trackcodex",
  "private": true,
  "version": "0.0.0",
  "description": "TrackCodex Desktop App",
  "author": "Quantaforge",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "server": "npx tsx -r dotenv/config backend/server.ts",
    "start:all": "concurrently \"npm run server\" \"npm run dev\"",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build:backend": "node scripts/build-backend.js",
    "build:electron": "esbuild electron/main.ts electron/preload.ts --bundle --platform=node --format=esm --outdir=dist-electron --external:electron",
    "electron:dev": "npm run build:electron && electron dist-electron/main.js",
    "dist": "npm run build && npm run build:backend && npm run build:electron && electron-builder"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/utilities": "^3.2.2",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/redis": "^7.1.0",
    "@fastify/session": "^11.1.1",
    "@fastify/websocket": "^11.2.0",
    "@google/genai": "^1.38.0",
    "@monaco-editor/react": "^4.7.0",
    "@types/dockerode": "^4.0.1",
    "axios": "^1.13.3",
    "bcryptjs": "^3.0.3",
    "dockerode": "^4.0.9",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "monaco-editor": "^0.55.1",
    "process": "^0.11.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-resizable-panels": "^2.0.19",
    "react-router-dom": "6",
    "recharts": "^3.6.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@prisma/client": "^5.10.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-is-dev": "^3.0.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^5.10.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.53.1",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.quantaforge.trackcodex",
    "productName": "TrackCodex",
    "files": [
      "dist/**/*",
      "dist-backend/**/*",
      "dist-electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "extraResources": [
      {
        "from": "backend/schema.prisma",
        "to": "backend/schema.prisma"
      },
      {
        "from": ".env",
        "to": ".env"
      }
    ]
  }
}
